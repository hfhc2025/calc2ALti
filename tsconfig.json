{
  "compilerOptions": {
    /* === Target & módulos === */
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",

    /* === Paths & aliases === */
    "baseUrl": ".",            // <- habilita los paths relativos al proyecto
    "paths": {
      "@/*": ["./*"]            // @/hooks → ./hooks, @/components → ./components, etc.
    },

    /* === Strict mode & helpers === */
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,

    /* === JSX / React === */
    "jsx": "preserve",

    /* === Libs === */
    "lib": ["dom", "dom.iterable", "esnext"],

    /* === Plugins (Next.js) === */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* === Archivos incluidos === */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],

  /* === Exclusiones === */
  "exclude": ["node_modules"]
}